<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alarm_list_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="4dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackgroundBorderless"
    card_view:cardBackgroundColor="?card_color"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <Switch
            android:id="@+id/aSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:thumb="@drawable/custom_switch_thumb"
            android:track="@drawable/switch_track_custom"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/time" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-light"
            android:textColor="?android:textColorPrimary"
            android:textSize="40sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="22:00" />

        <TextView
            android:id="@+id/next_trigger_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/light"
            android:textSize="12sp"
            android:textColor="?android:textColorSecondary"
            app:layout_constraintBottom_toTopOf="@+id/time"
            app:layout_constraintStart_toStartOf="@id/time"
            tools:text="Mo Tu Wd" />

        <android.support.v7.widget.AppCompatCheckBox
            android:id="@+id/repeat"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:fontFamily="@font/light"
            android:text="Repeat"
            android:textSize="13sp"
            app:buttonTint="?android:textColorPrimary"
            android:textColor="?android:textColorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time" />


        <LinearLayout
            android:id="@+id/days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingTop="8dp"
            app:layout_constraintStart_toStartOf="@id/next_trigger_day"
            app:layout_constraintTop_toBottomOf="@+id/repeat">

            <Button
                android:id="@+id/sun"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/day_off"
                android:fontFamily="@font/light"
                android:text="Su"
                android:textAllCaps="false"
                android:textColor="?android:textColorPrimary"
                android:textSize="12sp" />

            <Button
                android:id="@+id/mon"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="1dp"
                android:background="@drawable/day_off"
                android:fontFamily="@font/light"
                android:text="Mo"
                android:textAllCaps="false"
                android:textColor="?android:textColorPrimary"
                android:textSize="12sp" />

            <Button
                android:id="@+id/tue"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="1dp"
                android:background="@drawable/day_off"
                android:fontFamily="@font/light"
                android:text="Tu"
                android:textAllCaps="false"
                android:textColor="?android:textColorPrimary"
                android:textSize="12sp" />

            <Button
                android:id="@+id/wed"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="1dp"
                android:background="@drawable/day_off"
                android:fontFamily="@font/light"
                android:text="Wd"
                android:textAllCaps="false"
                android:textColor="?android:textColorPrimary"
                android:textSize="12sp" />

            <Button
                android:id="@+id/thu"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="1dp"
                android:background="@drawable/day_off"
                android:fontFamily="@font/light"
                android:text="Th"
                android:textAllCaps="false"
                android:textColor="?android:textColorPrimary"
                android:textSize="12sp" />

            <Button
                android:id="@+id/fri"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="1dp"
                android:background="@drawable/day_off"
                android:fontFamily="@font/light"
                android:text="Fr"
                android:textAllCaps="false"
                android:textColor="?android:textColorPrimary"
                android:textSize="12sp" />

            <Button
                android:id="@+id/sat"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginStart="1dp"
                android:background="@drawable/day_off"
                android:fontFamily="@font/light"
                android:text="Sa"
                android:textAllCaps="false"
                android:textColor="?android:textColorPrimary"
                android:textSize="12sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@id/days">

            <Button
                android:id="@+id/sound"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_music"
                android:fontFamily="@font/light"
                android:text="Sound"
                android:textAllCaps="false"
                android:textSize="13sp" />

            <Button
                android:id="@+id/vibrate"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_vibrate"
                android:fontFamily="@font/light"
                android:text="Vibrate"
                android:textAllCaps="false"
                android:textSize="13sp" />

            <Button
                android:id="@+id/delete"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:drawablePadding="4dp"
                android:drawableStart="@drawable/ic_delete"
                android:fontFamily="@font/light"
                android:text="Delete"
                android:textAllCaps="false"
                android:textSize="13sp" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/ripple"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            card_view:srcCompat="@drawable/ic_up" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>